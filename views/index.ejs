<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
   <div class="container mb-4 shadow p-4 mt-5" >
        <h1 class="text-center mt-5 borfer-b py-2 ">Expense Tracker Form</h1>
    
        <form action="/todo" method="post">

            <div class="row">
                <div class="col-12">
                  <label for="type">Type</label>
                  <select name="type" class="form-control  my-2" id="type">
                    <option value="volunteer">Select a Type</option>
                    <option value="Income">Income</option>
                    <option value="Expense">Expense</option>
                  </select>
                </div>
                <div class="col-12">
                  <label for="category">category</label>
                  <select id="category" name="category" class="form-control  my-2">
                  <option value="volunteer">Select a category</option>
                  <option value="Bussiness" >Bussiness</option>
                  <option value="Deposit" >Deposit</option>
                  <option value="Invesment">Invesment</option>
                  <option value="gift">gift</option>
                </select>
                </div>
                <div class="col-6">
                  <label for="amount">Amount</label>
                  <input type="number" class="form-control my-2" placeholder="Enter Amount" name="amount" aria-label="Amount" id="amount">
                </div>
                <div class="col-8">
                  <label for="Description">Description</label>
                    <textarea type="text" class="form-control my-2" name="Description" aria-label="Description" id="Description" placeholder="Enter Your description" > </textarea>
                </div>
                <div class="col-8">
                  <label for="date">Date</Data></label>
                    <input type="date" class="form-control my-2" name="date" aria-label="date" id="date">
                </div>
                <div class="text-center" style="margin-top: 50px;">
                    <button type="submit" class= "btn btn-outline-dark">add+</button>
                </div>
            </div>
        </form>    
        <div class="container text-center">
          <h2  class="text-center mt-5 py-2 " >Tran</h2>
          <table border="1" class="table table-light">
              <thead>
                  <tr>
                      <th>Type</th>
                      <th>Category</th>
                      <th>Description</th>
                      <th>Amount</th>
                      <th>Date</th>
                      <th>action</th>
                  </tr>
              </thead>
              <tbody>
                  <% todos.forEach((t,index)=>{ %>
                      <tr>
                          <td><%= t.type %></td>
                          <td><%= t.category %></td>
                          <td><%= t.Description %></td>
                          <td><%= t.amount %></td>
                          <td><%= t.date %></td>
                          <td>
                              <a href="/edit/<%= t.id %>" class="btn text-success">edit</a> ||
                              <a href="/delet/<%= t.id %>" class="btn text-danger">delete</a> ||
                          </td>
                      </tr>
                      <% }) %>
                  </tbody>
              </table>
      </div>    
    </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>